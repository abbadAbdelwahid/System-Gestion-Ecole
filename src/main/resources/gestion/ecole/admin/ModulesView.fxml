<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gestion.ecole.controllers.admin.ModuleController">
    <!-- Barre supérieure avec un titre élégant -->
    <top>
        <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #2c3e50;">
            <Label text="Gestion des Modules" style="-fx-font-size: 22px; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <HBox spacing="10" alignment="CENTER">
                <TextField fx:id="searchField" promptText="Rechercher par nom..." style="-fx-pref-width: 400px;"/>
                <Button text="Rechercher" onAction="#searchModules" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Button text="Réinitialiser" onAction="#loadModules" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </top>

    <!-- Contenu principal -->
    <center>
        <VBox spacing="20" alignment="CENTER" style="-fx-padding: 20;">
            <!-- TableView pour afficher les modules -->
            <TableView fx:id="moduleTable" prefHeight="300" prefWidth="800">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="nomColumn" text="Nom" prefWidth="150"/>
                    <TableColumn fx:id="codeColumn" text="Code" prefWidth="150"/>
                    <TableColumn fx:id="professeurIdColumn" text="Professeur ID" prefWidth="100"/>
                    <TableColumn fx:id="actionColumn" text="Actions" prefWidth="150"/>
                    <TableColumn fx:id="detailColumn" text="Détails" prefWidth="150"/>
                </columns>
            </TableView>


            <!-- Zone de saisie des informations -->
            <HBox spacing="15" alignment="CENTER">
                <TextField fx:id="nomField" promptText="Nom" style="-fx-pref-width: 200px;"/>
                <TextField fx:id="codeField" promptText="Code Module" style="-fx-pref-width: 200px;"/>
                <TextField fx:id="professeurIdField" promptText="Professeur ID" style="-fx-pref-width: 200px;"/>
            </HBox>

            <!-- Boutons d'action -->
            <HBox spacing="20" alignment="CENTER">
                <Button text="Ajouter" onAction="#addModule" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 20;"/>
                <Button text="Modifier" onAction="#updateModule" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 20;"/>
                <Button text="Supprimer" onAction="#deleteModule" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 20;"/>
            </HBox>
        </VBox>
    </center>

    <!-- Pied de page -->
    <bottom>
        <Label text="Application de Gestion des Modules - 2024" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" alignment="CENTER" BorderPane.alignment="CENTER"/>
    </bottom>
</BorderPane>
