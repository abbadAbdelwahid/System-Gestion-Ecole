<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="541.0" prefWidth="867.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gestion.ecole.controllers.admin.ModuleController">
    <!-- Barre supérieure avec un titre élégant -->
    <top>
        <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #2c3e50;">
            <Label style="-fx-font-size: 22px; -fx-text-fill: white; -fx-font-weight: bold;" text="Gestion des Modules" />
            <HBox alignment="CENTER" spacing="10">
                <TextField fx:id="searchField" promptText="Rechercher par nom..." style="-fx-pref-width: 400px;" />
                <Button onAction="#searchModules" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold;" text="Rechercher" />
                <Button onAction="#loadModules" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" text="Réinitialiser" />
            </HBox>
        </VBox>
    </top>

    <!-- Contenu principal -->
    <center>
        <VBox alignment="CENTER" prefHeight="434.0" prefWidth="880.0" spacing="20" style="-fx-padding: 20;">
            <!-- TableView pour afficher les modules -->
            <TableView fx:id="moduleTable" prefHeight="300" prefWidth="800">
                <columns>
                    <TableColumn fx:id="idColumn" prefWidth="50" text="ID" />
                    <TableColumn fx:id="nomColumn" prefWidth="150" text="Nom" />
                    <TableColumn fx:id="codeColumn" prefWidth="150" text="Code" />
                    <TableColumn fx:id="professeurIdColumn" prefWidth="100" text="Professeur ID" />
                    <TableColumn fx:id="actionColumn" prefWidth="150" text="Actions" />
                    <TableColumn fx:id="detailColumn" prefWidth="150" text="Détails" />
                </columns>
            </TableView>


            <!-- Zone de saisie des informations -->
            <HBox alignment="CENTER" spacing="15">
                <TextField fx:id="nomField" promptText="Nom" style="-fx-pref-width: 200px;" />
                <TextField fx:id="codeField" promptText="Code Module" style="-fx-pref-width: 200px;" />
                <TextField fx:id="professeurIdField" promptText="Professeur ID" style="-fx-pref-width: 200px;" />
            </HBox>

            <!-- Boutons d'action -->
            <HBox alignment="CENTER" spacing="20">
                <Button onAction="#addModule" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 20;" text="Ajouter" />
                <Button onAction="#updateModule" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 20;" text="Modifier" />
                <Button onAction="#deleteModule" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 20;" text="Supprimer" />
            </HBox>
        </VBox>
    </center>

    <!-- Pied de page -->
    <bottom>
        <Label alignment="CENTER" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" text="Application de Gestion des Modules - 2024" BorderPane.alignment="CENTER" />
    </bottom>
</BorderPane>
