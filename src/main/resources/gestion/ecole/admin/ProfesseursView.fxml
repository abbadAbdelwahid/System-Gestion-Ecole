<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gestion.ecole.controllers.admin.ProfesseurController">
    <top>
        <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #2c3e50;">
            <Label text="Gestion des Professeurs" style="-fx-font-size: 22px; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <HBox spacing="10" alignment="CENTER">
                <TextField fx:id="searchField" promptText="Rechercher par nom ou spécialité..." style="-fx-pref-width: 400px;"/>
                <Button text="Rechercher" onAction="#searchProfesseurs" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Button text="Réinitialiser" onAction="#loadProfesseurs" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </top>
    <center>
        <VBox spacing="20" alignment="CENTER" style="-fx-padding: 20;">
            <!-- TableView Section -->
            <TableView fx:id="professeurTable" prefHeight="300" prefWidth="800" style="-fx-background-color: white; -fx-border-color: #34495e; -fx-border-width: 1;">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="nomColumn" text="Nom" prefWidth="200"/>
                    <TableColumn fx:id="prenomColumn" text="Prénom" prefWidth="200"/>
                    <TableColumn fx:id="specialiteColumn" text="Spécialité" prefWidth="350"/>
                </columns>
            </TableView>

            <!-- Input Fields Section -->
            <HBox spacing="10" alignment="CENTER">
                <TextField fx:id="nomField" promptText="Nom" style="-fx-pref-width: 200px;"/>
                <TextField fx:id="prenomField" promptText="Prénom" style="-fx-pref-width: 200px;"/>
                <TextField fx:id="specialiteField" promptText="Spécialité" style="-fx-pref-width: 300px;"/>
            </HBox>

            <!-- Buttons Section -->
            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="addButton" text="Ajouter" onAction="#addProfesseur" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 20;"/>
                <Button fx:id="updateButton" text="Modifier" onAction="#updateProfesseur" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 20;"/>
                <Button fx:id="deleteButton" text="Supprimer" onAction="#deleteProfesseur" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 20;"/>
                <Button fx:id="assignToModuleButton" text="Affecter au module" onAction="#assignProfesseurToModule" style="-fx-background-color: #8e44ad; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 20;"/>
                <Button fx:id="exportButton" text="Exporter CSV" onAction="#exportProfesseursToCSV" style="-fx-background-color: #8e44ad; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 20;"/>
                <Button fx:id="exportPdfButton" text="Exporter PDF" onAction="#exportProfesseursToPDF" style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 20;"/>
            </HBox>
        </VBox>
    </center>
    <bottom>
        <Label text="Application de Gestion des Professeurs - 2024" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" BorderPane.alignment="CENTER"/>
    </bottom>
</BorderPane>
