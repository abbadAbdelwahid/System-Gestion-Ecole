<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gestion.ecole.controllers.admin.ProfesseurController">
    <top>
        <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #ffffff;">
            <HBox alignment="CENTER" spacing="10">
            <Label style="-fx-font-size: 22px; -fx-text-fill: #000000; -fx-font-weight: bold;" text="Gestion des Professeurs" />
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <TextField fx:id="searchField" promptText="Rechercher par nom ou spécialité..." style="-fx-pref-width: 400px;" />
                <Button onAction="#searchProfesseurs" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold;" text="Rechercher" />
                <Button onAction="#loadProfesseurs" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" text="Réinitialiser" />
            </HBox>
        </VBox>
    </top>
    <center>
        <VBox alignment="CENTER" prefHeight="434.0" prefWidth="857.0" spacing="20" style="-fx-padding: 20;">
            <TableView fx:id="professeurTable" onMouseClicked="#handleRowClick" prefHeight="300" prefWidth="800" style="-fx-background-color: white; -fx-border-color: #dcdcdc; -fx-border-width: 1;">
                <columns>
                    <TableColumn fx:id="idColumn" prefWidth="50" text="ID" />
                    <TableColumn fx:id="nomColumn" prefWidth="200" text="Nom" />
                    <TableColumn fx:id="prenomColumn" prefWidth="200" text="Prénom" />
                    <TableColumn fx:id="specialiteColumn" prefWidth="350" text="Spécialité" />
                </columns>
            </TableView>

            <HBox alignment="CENTER" spacing="10">
                <TextField fx:id="nomField" promptText="Nom" style="-fx-pref-width: 200px;" />
                <TextField fx:id="prenomField" promptText="Prénom" style="-fx-pref-width: 200px;" />
                <TextField fx:id="specialiteField" promptText="Spécialité" style="-fx-pref-width: 300px;" />
            </HBox>

            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="addButton" onAction="#addProfesseur" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 20;" text="Ajouter" />
                <Button fx:id="updateButton" onAction="#updateProfesseur" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 20;" text="Modifier" />
                <Button fx:id="deleteButton" onAction="#deleteProfesseur" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 20;" text="Supprimer" />
                <Button fx:id="assignToModuleButton" onAction="#assignProfesseurToModule" style="-fx-background-color: #8e44ad; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 20;" text="Affecter au module" />
                <Button fx:id="exportButton" onAction="#exportProfesseursToCSV" style="-fx-background-color: #000000; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 20;" text="Exporter CSV" />
                <Button fx:id="exportPdfButton" onAction="#exportProfesseursToPDF" style="-fx-background-color: #000000; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 20;" text="Exporter PDF" />
            </HBox>
        </VBox>
    </center>
    <bottom>
        <Label style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" text="Application de Gestion des Professeurs - 2024" BorderPane.alignment="CENTER" />
    </bottom>
</BorderPane>
