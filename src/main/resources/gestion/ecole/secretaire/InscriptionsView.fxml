<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="gestion.ecole.controllers.secretaire.InscriptionsController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- En-tête -->
    <Label text="Gestion des Inscriptions" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    <VBox spacing="10">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <!-- Zone de recherche -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Rechercher :" />
            <TextField fx:id="searchField" promptText="Nom d'étudiant ou nom de module" HBox.hgrow="ALWAYS"/>
            <Button text="Rechercher" onAction="#handleRechercher"/>
            <Button text="Rafraîchir" onAction="#handleRefresh"/>
        </HBox>

        <!-- Zone d'ajout existante -->
        <GridPane hgap="10" vgap="10">
            <!-- Vos éléments existants -->
        </GridPane>

        <!-- Le reste de votre FXML -->
    </VBox>
    <!-- Formulaire d'ajout -->
    <GridPane hgap="10" vgap="10">
        <padding>
            <Insets top="10" bottom="10"/>
        </padding>

        <!-- Première ligne -->
        <ComboBox fx:id="etudiantComboBox"
                  promptText="Sélectionner un étudiant"
                  GridPane.columnIndex="0"
                  GridPane.rowIndex="0"
                  maxWidth="Infinity"/>

        <ComboBox fx:id="moduleComboBox"
                  promptText="Sélectionner un module"
                  GridPane.columnIndex="1"
                  GridPane.rowIndex="0"
                  maxWidth="Infinity"/>

        <DatePicker fx:id="datePicker"
                    GridPane.columnIndex="2"
                    GridPane.rowIndex="0"
                    maxWidth="Infinity"/>

        <Button text="Ajouter une inscription"
                onAction="#handleAjouterInscription"
                GridPane.columnIndex="3"
                GridPane.rowIndex="0"/>
    </GridPane>

    <!-- Table des inscriptions -->
    <TableView fx:id="tableInscriptions" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="columnId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="columnEtudiant" text="Étudiant" prefWidth="200"/>
            <TableColumn fx:id="columnModule" text="Module" prefWidth="200"/>
            <TableColumn fx:id="columnDate" text="Date d'inscription" prefWidth="150"/>
        </columns>
    </TableView>

    <!-- Barre d'outils -->
    <HBox spacing="10">
        <Button text="Supprimer"
                onAction="#handleSupprimerInscription"
                style="-fx-background-color: #ff4444; -fx-text-fill: white;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Exporter PDF"
                onAction="#handleExportPDF"
                style="-fx-background-color: #4444ff; -fx-text-fill: white;"/>
        <Button text="Exporter CSV"
                onAction="#handleExportCSV"
                style="-fx-background-color: #44ff44; -fx-text-fill: white;"/>
    </HBox>

    <!-- Message d'état -->
    <Label fx:id="messageLabel"
           wrapText="true"
           style="-fx-padding: 10;"/>

</VBox>