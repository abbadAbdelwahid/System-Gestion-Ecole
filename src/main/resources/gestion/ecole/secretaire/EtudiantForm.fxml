<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="gestion.ecole.controllers.secretaire.EtudiantFormController">
    <children>
        <VBox spacing="10">
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
            </padding>
            <Label text="Formulaire Étudiant" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <Label text="Matricule *" />
            <TextField fx:id="matriculeField" />
            <Label text="Nom *" />
            <TextField fx:id="nomField" />
            <Label text="Prénom *" />
            <TextField fx:id="prenomField" />
            <Label text="Date de naissance *" />
            <DatePicker fx:id="dateNaissanceField" />
            <Label text="Email" />
            <TextField fx:id="emailField" />
            <Label text="Promotion" />
            <TextField fx:id="promotionField" />
            <Label fx:id="lblMessage" />
            <HBox spacing="10" alignment="CENTER">
                <Button text="Valider" onAction="#validerEtudiant" />
                <Button text="Annuler" onAction="#annulerAction" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>