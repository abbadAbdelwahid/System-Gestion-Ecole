<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gestion.ecole.controllers.secretaire.EtudiantFormController">
    <children>
        <VBox prefHeight="412.0" prefWidth="370.0" spacing="10">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Formulaire Étudiant" />
            <Label text="Matricule *" />
            <TextField fx:id="matriculeField" />
            <Label text="Nom *" />
            <TextField fx:id="nomField" />
            <Label text="Prénom *" />
            <TextField fx:id="prenomField" />
            <Label text="Date de naissance *" />
            <DatePicker fx:id="dateNaissanceField" prefHeight="26.0" prefWidth="154.0" />
            <Label text="Email" />
            <TextField fx:id="emailField" />
            <Label text="Promotion" />
            <TextField fx:id="promotionField" />
            <Label fx:id="lblMessage" />
            <HBox alignment="CENTER" spacing="10">
                <Button onAction="#validerEtudiant" text="Valider" />
                <Button onAction="#annulerAction" text="Annuler" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
