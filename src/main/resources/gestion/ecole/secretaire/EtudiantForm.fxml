<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gestion.ecole.controllers.secretaire.EtudiantFormController">
    <children>
        <VBox prefHeight="514.0" prefWidth="356.0" spacing="10">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="%form.title" />
            <Label text="%form.matricule" />
            <TextField fx:id="matriculeField" promptText="%form.matricule.prompt" />
            <Label text="%form.nom" />
            <TextField fx:id="nomField" promptText="%form.nom.prompt" />
            <Label text="%form.prenom" />
            <TextField fx:id="prenomField" promptText="%form.prenom.prompt" />
            <Label text="%form.dateNaissance" />
            <DatePicker fx:id="dateNaissanceField" promptText="%form.dateNaissance.prompt" />
            <Label text="%form.email" />
            <TextField fx:id="emailField" promptText="%form.email.prompt" />
            <Label text="%form.promotion" />
            <TextField fx:id="promotionField" promptText="%form.promotion.prompt" />
            <Label fx:id="lblMessage" />
            <HBox alignment="CENTER" spacing="10">
                <Button onAction="#validerEtudiant" text="%form.button.validate" />
                <Button onAction="#annulerAction" text="%form.button.cancel" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
