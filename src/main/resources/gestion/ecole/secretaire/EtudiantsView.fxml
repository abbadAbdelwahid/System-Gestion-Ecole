<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="gestion.ecole.controllers.secretaire.EtudiantsController">
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
            </padding>

            <!-- Barre de recherche -->
            <HBox spacing="10">
                <Label text="Rechercher :" />
                <TextField fx:id="searchField" promptText="Nom ou matricule" />
                <Button onAction="#handleRechercheEtudiant" text="Rechercher" />
                <Button onAction="#handleRefreshTable" text="Rafraîchir" />
            </HBox>

            <!-- Tableau des étudiants -->
            <TableView fx:id="tableEtudiants" prefHeight="300">
                <columns>
                    <TableColumn fx:id="columnNom" prefWidth="150" text="Nom" />
                    <TableColumn fx:id="columnPrenom" prefWidth="150" text="Prénom" />
                    <TableColumn fx:id="columnEmail" prefWidth="200" text="Email" />
                    <TableColumn fx:id="columnMatricule" prefWidth="100" text="Matricule" />
                    <TableColumn fx:id="columnPromotion" prefWidth="150" text="Promotion" />
                    <TableColumn fx:id="columnDateNaissance" prefWidth="150" text="Date de Naissance" />
                </columns>
            </TableView>

            <!-- Boutons d'action -->
            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="btnAjouter" onAction="#handleAjouterEtudiant" text="Ajouter" />
                <Button fx:id="btnModifier" onAction="#handleModifierEtudiant" text="Modifier" />
                <Button fx:id="btnSupprimer" onAction="#handleSupprimerEtudiant" text="Supprimer" />
            </HBox>
            <Label fx:id="lblMessage" text="" textFill="green" />
        </VBox>
    </center>
</BorderPane>
