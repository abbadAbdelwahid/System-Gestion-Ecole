<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gestion.ecole.controllers.secretaire.EtudiantsController">
    <center>
        <VBox prefHeight="440.0" prefWidth="846.0" spacing="10">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <!-- Search Bar -->
            <HBox spacing="10">
                <Label text="%search.label" />
                <TextField fx:id="searchField" promptText="%search.placeholder" />
                <Button onAction="#handleRechercheEtudiant" text="%button.search" />
                <Button onAction="#handleRefreshTable" text="%button.refresh" />
            </HBox>

            <!-- Students Table -->
            <TableView fx:id="tableEtudiants" prefHeight="300">
                <columns>
                    <TableColumn fx:id="columnNom" prefWidth="150" text="%column.nom" />
                    <TableColumn fx:id="columnPrenom" prefWidth="150" text="%column.prenom" />
                    <TableColumn fx:id="columnEmail" prefWidth="200" text="%column.email" />
                    <TableColumn fx:id="columnMatricule" prefWidth="100" text="%column.matricule" />
                    <TableColumn fx:id="columnPromotion" prefWidth="150" text="%column.promotion" />
                    <TableColumn fx:id="columnDateNaissance" prefWidth="150" text="%column.dateNaissance" />
                </columns>
            </TableView>

            <!-- Action Buttons -->
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="btnAjouter" onAction="#handleAjouterEtudiant" text="%button.add" />
                <Button fx:id="btnModifier" onAction="#handleModifierEtudiant" text="%button.modify" />
                <Button fx:id="btnSupprimer" onAction="#handleSupprimerEtudiant" text="%button.delete" />
            </HBox>
            <Label fx:id="lblMessage" text="" textFill="green" />
        </VBox>
    </center>
</BorderPane>
